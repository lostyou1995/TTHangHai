@model TTHangHai.Models.tb_thuyen

@{
    ViewBag.Title = "Xóa | Tàu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h3>Bạn có chắc chắn muốn xóa không???</h3>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoHieu)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenTau)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IMO)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.QuocTich)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TongDungTichMay)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TongCSMayChinh)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TrangThai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tb_coquan.TenCoQuan)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tb_loaitau.TenLoai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tb_thuyenvien.HoTenLot)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.SoHieu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.TenTau)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.IMO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.QuocTich)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.TongDungTichMay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.TongCSMayChinh)
                                    </td>

                                    @{

                                        if (Model.TrangThai == true)
                                        {
                                            <td class="text-success">
                                                Đã duyệt
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="text-danger">
                                                Chưa duyệt
                                            </td>
                                        }
                                    }
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.tb_coquan.TenCoQuan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.tb_loaitau.TenLoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.tb_thuyenvien.HoTenLot)
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        @using (Html.BeginForm())
            {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color" style="padding-top:5%">
                                <input type="submit" value="Delete" class="btn btn-danger" /> 
                                <a href="@Url.Action("Index")" class="btn btn-default">Hủy bỏ</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>